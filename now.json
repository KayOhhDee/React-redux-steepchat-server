{
  "name": "steepchat-api",
  "version": 2,
  "env": {
    "MONGODB_URI": "@my-mongodb-uri",
    "SECRET_KEY" : "@my-secret-key",
    "CLOUD_NAME" : "@my-cloud-name",
    "API_KEY"    : "@my-api-key",
    "API_SECRET" : "@my-api-secret"
  },
  "builds": [{ "src": "./index.js", "use": "@now/node-server" }],
  "routes": [{
    "src": "/api/(.*)",
    "dest": "/"
  }]
}
